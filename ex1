int R = 7;
int G = 5;
int B = 6;
void setup(){
    pinMode(R, OUTPUT);
    pinMode(G, OUTPUT);
    pinMode(B, OUTPUT);
}
void loop()
{
    digitalWrite(R, HIGH);
    digitalWrite(G, LOW);
    digitalWrite(B, HIGH);
    delay(4000);
    digitalWrite (R, LOW);
    digitalWrite(G, HIGH);
    digitalWrite(B, HIGH);
    delay(4000);
    digitalWrite (R, HIGH);
    digitalWrite(G, HIGH);
    digitalWrite(B, LOW);
    delay(4000);
    digitalWrite (R, LOW);
    digitalWrite(G, LOW);
    digitalWrite(B, LOW);
    delay(4000);
}
