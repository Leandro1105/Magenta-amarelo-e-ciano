#define NOTE_C4 524
#define NOTE_D4 588
#define NOTE_E4 660
#define NOTE_F4 698
#define NOTE_G4 784
#define NOTE_A4 880
#define NOTE_B4 988
int falante = 11;
int tempo = 800;

int notas[] = {
 NOTE_C4, NOTE_D4, NOTE_E4, NOTE_F4, 
 NOTE_G4, NOTE_A4, NOTE_B4
};

void setup() {
}

void loop() {
 for (int i = 0; i < 7; i++) {
   tone(falante, notas[i], tempo);
   delay(tempo);
 }
 
}
