  {
      if(x==0)
      {
  digitalWrite(led, HIGH);
  delay(150);
  digitalWrite(led, LOW);
  delay(100);
      }
      else if(x==1)
      {
  digitalWrite(led, HIGH);
  delay(400);
  digitalWrite(led, LOW);
  delay(100);
      }
