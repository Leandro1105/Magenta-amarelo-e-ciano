int led = 6;

void setup() {
  Serial.begin(9600);
  pinMode(led, OUTPUT);
  pinMode(10, INPUT_PULLUP);
}

void loop() {
  //150 ms são os pontos
  //400 ms são os traços
if (digitalRead(10) == 0) {
  Serial.println(".-.. . .- -. -.. .-. ---   =   Leandro");
  // letra l
  for (int x=0; x<4; x++) 
  {
    if(x==0){
  digitalWrite(led, HIGH);
  delay(150);
  digitalWrite(led, LOW);
  delay(100);
    		}
    else if(x ==1)
    		{
  digitalWrite(led, HIGH);
  delay(400);//400 ms são os traços
