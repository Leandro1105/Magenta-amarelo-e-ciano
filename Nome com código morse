    for (int x=0; x<2; x++) 
  {
      if(x==0)
      {
  digitalWrite(led, HIGH);
  delay(400);
  digitalWrite(led, LOW);
  delay(100);
      }
      else if(x==1)
      {
  digitalWrite(led, HIGH);
  delay(150);
  digitalWrite(led, LOW);
  delay(100);
      }
  }
  delay(200);
  
   //letra d
    for (int x=0; x<3; x++) 
  {
      if(x==0)
      {
  digitalWrite(led, HIGH);
  delay(400);
  digitalWrite(led, LOW);
  delay(100);
      }
      else if(x==1)
      {
  digitalWrite(led, HIGH);
  delay(150);
  digitalWrite(led, LOW);
  delay(100);
